<%- include("../partials/header"); %>

<div class="ui main text pink container segment">
    <div class="ui huge header">Edit   <%= animeblog.title  %></div>
    <form action="/animeblog/<%= animeblog._id %>?_method=PUT" class="ui form" method="POST">
        <div class="field">
            <label>Anime Title</label>
            <input type="text" name="animeblog[title]" value= "<%= animeblog.title %>">
        </div>
        <div class="field">
            <label>Anime Image</label>
            <input type="text" name="animeblog[image]" value= "<%= animeblog.image %>">
        </div>
        <div class="field">
            <label>Number of episode</label>
            <input type="text" name="animeblog[episode]" value = "<%= animeblog.episode %>">
        </div>
        <div class="field">
            <label>Description of anime blog</label>
            <textarea name="animeblog[desc]" cols="30" rows="20"><%- animeblog.desc %></textarea>
        </div>
        
        <input class="ui inverted big green button" type="submit">
    
    </form>
</div>

<%- include("../partials/footer"); %>